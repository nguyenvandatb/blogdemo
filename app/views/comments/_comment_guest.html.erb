<li id="comment-<%= comment.id %>">

  <%= gravatar_for(comment.user, size: 30)%>
  <span class="user"><%= comment.user.name %></span>
  <span class="content">
    <%= comment.content %>
  </span>
  <span class="timestamp">
    <%= t(".comment_post_verb")%> <%= time_ago_in_words(comment.created_at) %>
    <%= t(".comment_post_ago") %>.
  </span>
</li>
