<li id="micropost-<%= micropost.id %>">
  <%= gravatar_for(micropost.user, size: 50) %>
  <span class="user"><%= micropost.user.name %></span>
  <span class="title"><%= micropost.title %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t(".comment_post_verb") %> <%= time_ago_in_words(micropost.created_at) %>
    <% t(".comment_post_ago") %>.
  </span>
  <ol class="comments">
    <% micropost.comments.each do |comment| %>
      <%= render "comments/comment_guest", comment: comment %>
    <% end %>
  </ol>
</li>
